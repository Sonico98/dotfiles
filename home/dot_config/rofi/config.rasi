configuration {
    display-drun:                   "  ";
    display-run:                    "  ";
    display-window:		    "  ";
    show-icons:true;
    icon-theme:                     "Fluent";
    modi: "combi,run";
    combi-modi: "window,drun";
}

@theme "material_dark"

* {
    lines: 4;
    columns: 7;
}
 
#window {
    border: 0;
    border-radius: 8px;
    padding: 50;
    width: 100%;
    height: 100%;
	fullscreen:  true;
}
 
#mainbox {
    background-color: #00000000;
    children: [inputbar, listview];
    spacing: 0px;
    /*margin: 20%;*/
    border-color: @base0D;
}
 
 
#listview {
    background-color: #00000000;
    fixed-height: 0;
    border: 0px;
    scrollbar: false;
    padding: 50px 80px 0px;
    layout: vertical;
}

element-icon {
    size: 			    8ch;
    background-color:		    #00000000; 
    position:			    center;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    margin:                         0.5% 0.5% -0.5% 0.5%;

}

#element-text {
    expand:                         true;
    horizontal-align:               0.5;
    vertical-align:                 0.5;
    margin:                         -0.5% 0.5% 0.5% 0.5%;
    background-color:		    #00000000; 
    position:			    center;
}


#element {
    background-color: #00000000;
    border: 0;
    border-radius: 15px;
    padding: 3 0  3 4 ;
    orientation: vertical;
    spacing: 20px;
}
 
#inputbar {
    children:   [ prompt,textbox-prompt-colon,entry,case-indicator ];
    background-color: #FFFFFF20;
    border-radius: 20px;
    padding: 8px;
    margin: 0% 35% 0% 35%;
}
 
#case-indicator {
    background-color: #00000000;
    spacing:    0;
}

#entry {
    spacing: 0;
    expand: true;
    horizontal-align: 0;
    placeholder: "Search";
    padding: 0.10% 0% 0% 0%;
}

#prompt {
    spacing:    0;
}
 
#textbox-prompt-colon {
    enabled: false;
    expand:     false;
    str:        ":";
    margin:     0px 0.3em 0em 0em ;
}

