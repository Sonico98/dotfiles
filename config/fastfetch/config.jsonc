{
    "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
    "logo": {
		"type": "kitty",
		"source": "~/.config/fastfetch/pic.png",
		"height": 20,
        "padding": {
            "top": 5
        }
    },
    "display": {
		"percent": {
			"type": 2
		},
		"color": "yellow",
		"disableLinewrap": true
    },
    "modules": [
