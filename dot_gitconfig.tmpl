[user]
	name = {{ .gituser | quote }}
	email = {{ .gitemail | quote }}

{{ if findExecutable "kitty" (list "/usr/bin") }}
[diff]
    tool = kitty
    guitool = kitty.gui
[difftool]
    prompt = false
    trustExitCode = true
[difftool "kitty"]
    cmd = kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
    cmd = kitten diff $LOCAL $REMOTE
{{ end }}
